#%Module1.0#####################################################################
##
## modules tools/Forge-18.3
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "tools/Forge-18.3 - sets the Environment for Arm Forge 18.3 in my home directory"
}

module-whatis   "Sets the environment for using Forge 18.3"

# for Tcl script use only
set     topdir          /opt/arm/Forge-18.3

setenv          ALLINEA_METRIC_PLUGIN_DIR             $topdir/map/metrics
setenv          SHELL /bin/bash
prepend-path    PATH            $topdir/include
prepend-path    PATH            $topdir/bin
prepend-path    MANPATH         $topdir/man
prepend-path    LD_LIBRARY_PATH $topdir/lib
setenv		ALLINEA_LICENCE_DIR /opt/arm/licenses/

